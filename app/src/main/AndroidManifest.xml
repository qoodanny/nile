<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.ProjectNile"
        tools:targetApi="31">

        <activity
            android:name=".presentation.InitializeActivity"
            android:exported="true"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".presentation.accountActivity.LoginActivity"
            android:exported="false" />

        <activity
            android:name=".presentation.accountActivity.SignUpActivity"
            android:exported="false" />

        <activity
            android:name=".presentation.shoppingActivity.HomeActivity"
            android:exported="false" />

        <activity
            android:name=".presentation.shoppingActivity.CartActivity"
            android:exported="false" />

        <activity
            android:name=".presentation.paymentActivity.PaymentActivity"
            android:exported="false" />

        <activity
            android:name=".presentation.paymentActivity.DeliveryOptionsActivity"
            android:exported="false" />

    </application>
</manifest>